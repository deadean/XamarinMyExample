<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             SizeChanged="OnSizeChanged"
             x:Class="MainApp.UI.Common.Views.Implementations.Views.Controls.StandartControls">
	<ScrollView>
		<StackLayout HorizontalOptions="FillAndExpand">
			<StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
				<Label Text="Slider"/>
				<StackLayout Padding="10, 0" HorizontalOptions="FillAndExpand">
					<Slider VerticalOptions="CenterAndExpand" x:Name="slider" Minimum="0" Maximum="1000"/>
					<Label Text="{Binding Value, StringFormat='Slider value:{0}'}"
                 BindingContext="{x:Reference slider}"
                 HorizontalOptions="Center"/>
				</StackLayout>
			</StackLayout>
			<StackLayout Orientation="Horizontal">
				<Label Text="Color changing"/>
				<StackLayout Padding="10, 0" HorizontalOptions="FillAndExpand">
					<Slider VerticalOptions="CenterAndExpand" x:Name="slider1" Minimum="0" Maximum="255" ValueChanged="ValueChanged"/>
					<Slider VerticalOptions="CenterAndExpand" x:Name="slider2" Minimum="0" Maximum="255" ValueChanged="ValueChanged"/>
					<Slider VerticalOptions="CenterAndExpand" x:Name="slider3" Minimum="0" Maximum="255" ValueChanged="ValueChanged"/>
					<BoxView x:Name="boxview"/>
				</StackLayout>
			</StackLayout>
			<StackLayout HorizontalOptions="FillAndExpand" Orientation="Horizontal">
				<Label Text="Slider"/>
				<StackLayout HorizontalOptions="FillAndExpand">
					<AbsoluteLayout VerticalOptions="CenterAndExpand">
						<Label x:Name="label1"
                   Text="TEXT"
                   AbsoluteLayout.LayoutBounds="0, 0.5"
                   AbsoluteLayout.LayoutFlags="PositionProportional" />
						<Label x:Name="label2"
                   Text="FADE"
                   Opacity="0"
                   AbsoluteLayout.LayoutBounds="0, 0.5"
                   AbsoluteLayout.LayoutFlags="PositionProportional" />
					</AbsoluteLayout>
					<Slider ValueChanged="OnSliderValueChanged" />
				</StackLayout>
			</StackLayout>
			<StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
				<Label Text="Stepper"/>
				<Label Text="{Binding Value, StringFormat='Stepper value:{0}'}" BindingContext="{x:Reference stepper}"/>
				<Stepper Maximum="10" x:Name="stepper"/>
			</StackLayout>
			<StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
				<Label Text="Switch"/>
				<Label Text="{Binding IsToggled, StringFormat='Switch IsToggled value:{0}'}" BindingContext="{x:Reference switch}"/>
				<Switch x:Name="switch" />
			</StackLayout>
			<StackLayout Orientation="Horizontal">
				<Label Text="Entry and Keyboards"/>
				<Entry Placeholder="Default" Keyboard="Default"/>
				<Entry Placeholder="Chat" Keyboard="Chat"/>
				<Entry Placeholder="Email" Keyboard="Email"/>
				<Entry Placeholder="Numeric" Keyboard="Numeric"/>
				<Entry Placeholder="Telephone" Keyboard="Telephone"/>
				<Entry Placeholder="Text" Keyboard="Text"/>
				<Entry Placeholder="Url" Keyboard="Url"/>
			</StackLayout>
			<StackLayout Orientation="Horizontal">
				<Label Text="DateTimePicker"/>
				<DatePicker Format="D"/>
			</StackLayout>
			<StackLayout Orientation="Horizontal">
				<Label Text="TimePicker"/>
				<TimePicker />
			</StackLayout>
			<StackLayout Orientation="Horizontal">
				<Label Text="Working with Grid"/>
        <Grid>
          <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
          </Grid.RowDefinitions>

          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
          </Grid.ColumnDefinitions>

          <BoxView Grid.Row="0" Grid.Column="0" BackgroundColor="Red" />
          <BoxView Grid.Row="0" Grid.Column="1" BackgroundColor="Blue" />
          <BoxView Grid.Row="1" Grid.Column="0" BackgroundColor="Aqua" />
          <BoxView Grid.Row="1" Grid.Column="1" BackgroundColor="Green" />
        </Grid>
			</StackLayout>
      <StackLayout>
        <Label Text="Grid Sample"/>
        <AbsoluteLayout>
          <Grid x:Name="grid"
                ColumnSpacing="1"
                AbsoluteLayout.LayoutBounds="0, 0, 1, 1"
                AbsoluteLayout.LayoutFlags="All" />
          <Frame x:Name="overlay"
                 OutlineColor="Blue"
                 BackgroundColor="Red"
                 Opacity="0"
                 AbsoluteLayout.LayoutBounds="0.5, 0.5, AutoSize, AutoSize"
                 AbsoluteLayout.LayoutFlags="PositionProportional">
            <Label x:Name="label"
                   TextColor="White"
                   FontSize="Large" />
          </Frame>
        </AbsoluteLayout>
      </StackLayout>
      <StackLayout>
        <Label Text="Grid with custom GridLength"/>
        <Grid>
          <Grid.Resources>
            <ResourceDictionary>
              <OnPlatform x:Key="keyThickness" x:TypeArguments="GridLength" iOS="2" Android="10" WinPhone="5"/>
            </ResourceDictionary>
          </Grid.Resources>
          <Grid.RowDefinitions>
            <RowDefinition Height="{StaticResource keyThickness}"/>
            <RowDefinition Height="{StaticResource keyThickness}"/>
          </Grid.RowDefinitions>

          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
          </Grid.ColumnDefinitions>

          <BoxView Grid.Row="0" Grid.Column="0" BackgroundColor="Red" />
          <BoxView Grid.Row="0" Grid.Column="1" BackgroundColor="Blue" />
          <BoxView Grid.Row="1" Grid.Column="0" BackgroundColor="Aqua" />
          <BoxView Grid.Row="1" Grid.Column="1" BackgroundColor="Green" />
        </Grid>
      </StackLayout>
      <StackLayout Orientation="Horizontal">
        <Label Text="Grid with changing orientation"/>
        <Grid x:Name="mainGrid">
          <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
          </Grid.RowDefinitions>

          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0"/>
          </Grid.ColumnDefinitions>

          <BoxView Grid.Row="0" Grid.Column="0" Color="Red" HeightRequest="50" WidthRequest="50"/>
          <BoxView Grid.Row="1" Grid.Column="0" Color="Aqua" x:Name="boxview12" HeightRequest="50" WidthRequest="50" />
        </Grid>
      </StackLayout>
			<StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
				<Label Text="SearchBar"/>
				<StackLayout>
					<SearchBar Placeholder="Search text"
                     SearchCommand="{Binding SearchCommand}"
                     Text="{Binding SearchText}"
                   />
					<ListView ItemsSource="{Binding SearchResults}">
						<ListView.ItemTemplate>
							<DataTemplate>
								<TextCell Text="{Binding Value}"/>
							</DataTemplate>
						</ListView.ItemTemplate>
					</ListView>
				</StackLayout>
			</StackLayout>
		</StackLayout>
	</ScrollView>
</ContentPage>