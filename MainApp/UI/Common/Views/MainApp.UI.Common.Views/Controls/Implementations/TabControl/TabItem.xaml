<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="{Binding Name}"
             xmlns:href="clr-namespace:PhotoTransfer.UI.Common.Views.Controls.Implementations.Labels;assembly=MainApp.UI.Common.Views"
             x:Class="MainApp.UI.Common.Views.Controls.Implementations.TabControl.TabItem">
  <ListView ItemsSource="{Binding Menus}" >
    <ListView.ItemTemplate>
      <DataTemplate>
        <ViewCell>
          <href:HrefLabel Text="{Binding Name}" Command="{Binding Command}"/>
        </ViewCell>
      </DataTemplate>
    </ListView.ItemTemplate>
  </ListView>
</ContentPage>